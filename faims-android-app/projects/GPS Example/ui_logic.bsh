onTabMapSelect() {
	clearBluePoint();
	
	selectedId = getMapGeometrySelected();
	
	for (int i = 0; i < loadedPoints.size(); i++) {
		id = loadedPoints.get(i);
		
		if (id == selectedId) {
			// load entity name
			Object entity = loadedEntities.get(i);
		
