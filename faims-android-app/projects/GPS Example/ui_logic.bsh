saveTabEntity() {

	collection = null;
	if (lastPointId != 0) {
		collection = new ArrayList();
		collection.add(getGeometry("tabgroup1/tab1/map", pointLayerId, lastPointId));
		
		// clear geometry
		clearGeometry("tabgroup1/tab1/map", pointLayerId, lastPointId);
		
		lastPointId = 0;
	} else {
		showWarning("Warning", "Please plot a point before saving entity");
		return;
	}

	List attributes = createAttributeList();
	attributes.add(createEntityAttribute("name", getFieldValue("tabgroup1/tab1/name"), null, null, null));
	
	String id = saveArchEnt(null, "simple", collection, attributes);
	
	refreshTabEntities();
	
	loadTabEntity(id);
}

loadedEntities = new ArrayList();
loadedPoints = new ArrayList();

setEntity(entity) {
	for (Object attribute : entity.getAttributes()) {
		if ("name".equals(attribute.getName())) {
			setFieldValue("tabgroup1/tab1/name", attribute.getText());
		}
	}
	point = entity.getGeometryList().get(0);
	
	setFieldValue("tabgroup1/tab1/position", "Longitude = " + point.getMapPos().x + ", Latitude = " + point.getMapPos().y);
}

loadTabEntity(id) {
	if (id == null) {
		entityId = getFieldValue("tabgroup1/tab2/entity");
	} else {
		entityId = id;
	}
	
	if (entityId == null || "".equals(entityId)) return;
	
	Object entity = fetchArchEnt(entityId);
	
	setEntity(entity);
	
	for (Object e : loadedEntities) {
		if (e.getId().equals(entityId)) {
			System.out.println("Entity already loaded");
			return;
		}
	}
	
	loadedEntities.add(entity);
	
	redrawEntities();
}

clearLoadedPoints() {
	for (Integer id : loadedPoints) {
		clearGeometry("tabgroup1/tab1/map", pointLayerId, id);
	}
	loadedPoints = new ArrayList();
}

redrawEntities() {
	clearLoadedPoints();
	
	for (Object entity : loadedEntities) {
		point = entity.getGeometryList().get(0);
		loadedPoints.add(drawGeometry("tabgroup1/tab1/map", pointLayerId, point, gpsPointStyle(Color.GREEN)));
	}
}

