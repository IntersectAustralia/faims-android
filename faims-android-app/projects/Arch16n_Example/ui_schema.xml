<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Simple Example</h:title>

    <model>
      <instance>
        <faims id="simple_example">
          <user>
              <tab1>
                  <users></users>
              </tab1>
          </user>
          <tabgroup1>
              <tab1>
                  <name></name>
                  <value></value>
                  <date></date>
                  <time></time>
                  <type></type>
                  <settype></settype>
                  <toast></toast>
              </tab1>
              <tab2>
                  <location></location>
                  <supervisor></supervisor>
                  <picture></picture>
              </tab2>
          </tabgroup1>
        </faims>
      </instance>

      <bind nodeset="/faims/tabgroup1/tab1/name" type="string"/>
      <bind nodeset="/faims/tabgroup1/tab1/value" type="decimal"/>
      <bind nodeset="/faims/tabgroup1/tab1/date" type="date"/>
      <bind nodeset="/faims/tabgroup1/tab1/time" type="time"/>

    </model>
  </h:head>

  
  <h:body>
    <group ref="user">
      <label>User List</label>
      <group ref="tab1" faims_scrollable="false">
        <label>User List</label>
        <select1 ref="users" appearance="compact">
          <label>Users:</label>
          <item>
            <label>dummy</label>
            <value>dummy</value>
          </item>
        </select1>
      </group>
    </group>
    <group ref="tabgroup1" faims_archent_type="simple">
      <label>Simple Entity Example</label>
      <group ref="tab1">
        <label>{entity} Tab1</label>
        <input ref="name" faims_attribute_name="name" faims_attribute_type="freetext">
          <label>{name}:</label>
        </input>
        <input ref="value" faims_attribute_name="value" faims_attribute_type="measure">
            <label>{value}:</label>
        </input>
        <input ref="date" faims_attribute_name="date" faims_attribute_type="freetext">
            <label>Date:</label>
        </input>
        <input ref="time" faims_attribute_name="time" faims_attribute_type="freetext">
            <label>Time:</label>
        </input>
        <select1 ref="type" faims_attribute_name="type" faims_attribute_type="vocab">
            <label>Type:</label>
            <item>
                <label>dummy</label>
                <value>dummy</value>
            </item>
        </select1>
        <trigger ref="settype">
            <label>Set type</label>
        </trigger>
        <trigger ref="toast">
            <label>Show Toast</label>
        </trigger>
	  </group>
      <group ref="tab2">
        <label>{entity} Tab2</label>
        <select ref="location" faims_attribute_name="location" faims_attribute_type="vocab">
            <label>Location:</label>
            <item>
                <label>dummy</label>
                <value>dummy</value>
            </item>
        </select>
        <select1 ref="supervisor" faims_attribute_name="supervisor" appearance="full" faims_attribute_type="freetext">
            <label>Supervisor:</label>
            <item>
                <label>{superA}</label>
                <value>supera</value>
            </item>
            <item>
                <label>{superB}</label>
                <value>superb</value>
            </item>
            <item>
                <label>{superC}</label>
                <value>superc</value>
            </item>
            <item>
                <label>{superD}</label>
                <value>superd</value>
            </item>
        </select1>
        <select1 ref="picture" type="image" faims_attribute_name="picture" faims_attribute_type="vocab" faims_annotation="false">
            <label>Picture:</label>
            <item>
                <label>dummy</label>
                <value>dummy</value>
            </item>
        </select1>
      </group>
    </group>
    
  </h:body>
</h:html>
